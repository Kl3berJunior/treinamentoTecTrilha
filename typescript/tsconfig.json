
// Compilador
// Pega todo o codigo em TypeScript e o converte a JS
{
    "compilerOptions": {
        // Aponta aonde ficaram os arquivos compilados
        "outDir": "dist/js",
        // No target escolhemos a vers達o do JS
        "target": "ES6",
        // N達o compila o arquivo se ouver algum erro nos arquivos TS
        "noEmitOnError": true,
        // N達o emite erro sempre que uma variavel n達o for tipada
        "noImplicitAny": true
    }, 
    // Aponta da onde retirar os arquivos
    "include": [ "app/**/*" ]
}